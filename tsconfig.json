{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types", "./typings.d.ts"],
    "lib": ["es2017", "dom"],
    "baseUrl": "src",
    "paths": {
      "@app/*": ["/*"],
      "@const/*": ["const/*"],
      "@entity/*": ["entity/*"],
      "@env/*": ["environments/*"]
    }
  }
}
