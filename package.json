{
  "name": "ui-components",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "build": "ng build ui",
    "test": "ng test ui",
    "lint": "ng lint ui --format stylish",
    "prettier": "prettier --list-different \"projects/ui/**/*.{ts, js, css, scss, md}\"",
    "e2e": "ng e2e",
    "fix:prettier": "prettier --write \"**/*.{ts, js, css, scss, md}\"",
    "fix:lint": "ng lint --fix *.ts -t verbose",
    "bundle-styles": "npm run bundle-styles-blue && npm run compile-scss-blue && npm run bundle-styles-green && npm run compile-scss-green",
    "bundle-styles-blue": "scss-bundle -e ./projects/ui/src/lib/themes/once-ui-theme-blue.scss -d ./dist/ui/themes/once-ui-theme-blue.scss",
    "bundle-styles-green": "scss-bundle -e ./projects/ui/src/lib/themes/once-ui-theme-green.scss -d ./dist/ui/themes/once-ui-theme-green.scss",
    "compile-scss-blue": "node-sass --include-path scss ./dist/ui/themes/once-ui-theme-blue.scss ./dist/ui/themes/once-ui-theme-blue.css && rimraf ./dist/ui/themes/once-ui-theme-blue.scss",
    "compile-scss-green": "node-sass --include-path scss ./dist/ui/themes/once-ui-theme-green.scss ./dist/ui/themes/once-ui-theme-green.css && rimraf -f ./dist/ui/themes/once-ui-theme-green.scss",
    "npm-pack": "cd dist/ui && npm pack",
    "package": "ng build ui && npm run bundle-styles && npm run npm-pack"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.0",
    "@angular/common": "^6.1.0",
    "@angular/compiler": "^6.1.0",
    "@angular/core": "^6.1.0",
    "@angular/forms": "^6.1.0",
    "@angular/http": "^6.1.0",
    "@angular/platform-browser": "^6.1.0",
    "@angular/platform-browser-dynamic": "^6.1.0",
    "@angular/router": "^6.1.0",
    "core-js": "^2.5.4",
    "rxjs": "~6.2.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.8.0",
    "@angular-devkit/build-ng-packagr": "~0.8.0",
    "@angular/cdk": "^6.4.0",
    "@angular/cli": "6.2.5",
    "@angular/compiler-cli": "^6.1.0",
    "@angular/language-service": "^6.1.0",
    "@angular/material": "^6.4.0",
    "@angular/material-moment-adapter": "^6.4.0",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/moment": "^2.13.0",
    "@types/node": "~8.9.4",
    "codelyzer": "^4.4.4",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-junit-reporter": "^1.2.0",
    "moment": "^2.22.2",
    "ng-packagr": "^4.1.0",
    "ngx-perfect-scrollbar": "^6.2.0",
    "prettier": "^1.14.3",
    "protractor": "~5.4.0",
    "puppeteer": "^1.7.0",
    "rimraf": "^2.6.2",
    "scss-bundle": "^2.3.2",
    "ts-node": "~7.0.0",
    "tsickle": ">=0.29.0",
    "tslib": "^1.9.0",
    "tslint": "~5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "~2.9.2"
  }
}
