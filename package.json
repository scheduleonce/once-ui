{
  "name": "once-ui",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "build": "ng build ui",
    "postbuild": "gulp copy",
    "test": "ng test ui",
    "lint": "ng lint ui --format stylish",
    "prettier": "prettier --list-different \"**/*.{ts,js,css,scss,md,html}\"",
    "e2e": "ng e2e",
    "fix:prettier": "prettier --write \"**/*.{ts,js,css,scss,md,html}\"",
    "fix:lint": "ng lint --fix *.ts -t verbose",
    "bundle-styles": "npm run bundle-styles-blue && npm run compile-scss-blue && npm run bundle-styles-green && npm run compile-scss-green",
    "bundle-styles-blue": "scss-bundle -e ./projects/ui/src/lib/themes/once-ui-theme-blue.scss -d ./dist/ui/themes/once-ui-theme-blue.scss",
    "bundle-styles-green": "scss-bundle -e ./projects/ui/src/lib/themes/once-ui-theme-green.scss -d ./dist/ui/themes/once-ui-theme-green.scss",
    "compile-scss-blue": "node-sass --include-path scss ./dist/ui/themes/once-ui-theme-blue.scss ./dist/ui/themes/once-ui-theme-blue.css && rimraf ./dist/ui/themes/once-ui-theme-blue.scss",
    "compile-scss-green": "node-sass --include-path scss ./dist/ui/themes/once-ui-theme-green.scss ./dist/ui/themes/once-ui-theme-green.css && rimraf -f ./dist/ui/themes/once-ui-theme-green.scss",
    "npm-pack": "cd dist/ui && npm pack",
    "package": "npm run build && npm run bundle-styles && npm run npm-pack",
    "predeploy-storybook": "node-sass --output-style compressed  projects/ui/src/lib/oui/core/theming/prebuilt -o src/stories/themes",
    "deploy-storybook": "storybook-to-ghpages -o out"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^7.2.0",
    "@angular/cdk": "^7.2.1",
    "@angular/common": "^7.2.0",
    "@angular/compiler": "^7.2.0",
    "@angular/core": "^7.2.0",
    "@angular/forms": "^7.2.0",
    "@angular/http": "^7.2.0",
    "@angular/platform-browser": "^7.2.0",
    "@angular/platform-browser-dynamic": "^7.2.0",
    "@angular/router": "^7.2.0",
    "core-js": "^2.6.1",
    "gulp": "^4.0.0",
    "rxjs": "^6.3.3",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.12.1",
    "@angular-devkit/build-ng-packagr": "^0.12.1",
    "@angular/cli": "^7.2.1",
    "@angular/compiler-cli": "^7.2.0",
    "@angular/language-service": "^7.2.0",
    "@angular/material": "^7.2.1",
    "@angular/material-moment-adapter": "^7.2.1",
    "@babel/core": "^7.2.2",
    "@storybook/addon-actions": "^4.1.6",
    "@storybook/addon-knobs": "^4.1.6",
    "@storybook/addon-links": "^4.1.6",
    "@storybook/addon-notes": "^4.1.6",
    "@storybook/addon-options": "^4.1.6",
    "@storybook/addons": "^4.1.6",
    "@storybook/angular": "^4.1.6",
    "@storybook/storybook-deployer": "^2.8.1",
    "@types/jasmine": "^3.3.5",
    "@types/jasminewd2": "^2.0.6",
    "@types/moment": "^2.13.0",
    "@types/node": "^10.12.18",
    "babel-loader": "^8.0.5",
    "codelyzer": "^4.4.4",
    "jasmine-core": "^3.3.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^3.1.4",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "^2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "karma-junit-reporter": "^1.2.0",
    "moment": "^2.23.0",
    "ng-packagr": "^4.4.5",
    "ngx-perfect-scrollbar": "^7.1.0",
    "node-sass": "^4.11.0",
    "prettier": "^1.15.3",
    "protractor": "^5.4.2",
    "puppeteer": "^1.11.0",
    "rimraf": "^2.6.3",
    "scss-bundle": "^2.3.2",
    "ts-node": "~7.0.0",
    "tsickle": "^0.34.0",
    "tslib": "^1.9.0",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2"
  }
}
